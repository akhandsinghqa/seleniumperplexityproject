<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Web Automation Test Suite" verbose="1" parallel="tests" thread-count="2">

    <!-- Parameters to be injected into BaseTest using @Parameters annotation -->
    <parameter name="browser" value="chrome"/>
    <parameter name="runMode" value="local"/>
    <parameter name="gridUrl" value="http://localhost:4444/wd/hub"/>

    <!-- Registering TestNG Listeners -->
    <listeners>
        <!-- Allure listener for annotations like @Step, @Attachment -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>

        <!-- Optional: Your custom listener to capture screenshots on failure -->
        <listener class-name="com.perplexity.automation.base.TestListener"/>
    </listeners>

    <!-- Define tests and test classes -->
    <test name="Login Feature Tests">
        <classes>
            <class name="com.perplexity.automation.tests.LoginTest"/>
            <!--            <class name="com.perplexity.automation.tests.HomePageTest"/>-->
        </classes>
    </test>

    <!-- You can add more <test> blocks for other features or pages -->
    <!--
    <test name="Home Page Tests">
        <classes>
            <class name="com.example.automation.tests.HomePageTest"/>
        </classes>
    </test>
    -->

</suite>
